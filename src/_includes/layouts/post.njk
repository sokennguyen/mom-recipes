---
layout: layouts/base.njk
templateClass: tmpl-post
---
<h1>{{ title }}</h1>

{{ content | safe }}

<hr>

	{%- set links = links %}
	{% if links %}
		<div>
		Links for this recipe:
		<ul>
		{% for link in links %}
			<a href="{{ link.url }}">{{ link.title }}</a>
		{% endfor %}
		</ul>
		</div>
	{% else %}
		<p>No links for this recipe.</p>
	{% endif %}
